div(class='container')
    .row(ng-controller='newjson')
        .col-md-2
        .col-md-8
            .servejson_main_div
                .servejson_space_div
                    .row
                        .col-md-12
                            h1.servejson_title New json
                .servejson_space_div
                    form(role='form' ng-submit='submit(newjson)')
                        .form-group
                            label Sub-Domain <small>(like: http://<strong class="text-primary">earth</strong>.servejson.com)</small>
                            select(class='form-control' ng-model='newjson.subdomain' required='true')
                                option(value='' disabled='true') Please select
                                option(value='earth') Earth
                                option(value='mars') Mars
                                option(value='mercury') Mercury
                                option(value='saturn') Saturn
                        .form-group
                            label Route <small>(like: http://earth.servejson.com/<strong class="text-primary">get_list</strong>)</small>
                            input(type='text' class='form-control' required='true' placeholder='get_list' ng-model='newjson.route')
                        .form-group
                            label Type
                            select(class='form-control' ng-model='newjson.type' required='true')
                                option(value='' disabled='true') Please select
                                option(value='get') GET
                                option(value='post') POST
                                option(value='put') PUT
                                option(value='delete') DELETE
                        .form-group
                            label Json
                            #editor-ace
                        .form-group.form-group-end
                            button(type='submit' class='btn btn-default button_servejson_buttom') Submit
        .col-md-2

        //- MODAL
        div(class='modal fade resultmodal' tabindex='-1' role='dialog' aria-labelledby='Result' aria-hidden='true')
            div(class='modal-dialog modal-sm')
                div(class='modal-content')
                    div(class='modal-header')
                        h4.modal-title#Result {{result.result}}
                    div(class='modal-body' ng-if='result.result == "Success"')
                        p Hi! Your json was created.
                        p Sub-Domain: {{result.subdomain}}
                        p Method: {{result.type}}
                        p URL: http://{{result.subdomain}}.servejson.com/{{result.route}}
                    div(class='modal-body' ng-if='result.result == "Error"')
                        p {{result.error}}
                    div(class='modal-footer')
                        button(class='btn btn-primary' type='button' data-dismiss='modal') Close
